<div class="single">
    <div class="btn">
        <a class="edit" href="/magasins/{{magasin.id}}/edit">Edit</a>
        <a class="delete" href="/magasins/{{magasin.id}}/delete">Delete</a>
    </div>
    <div class="single__hero">
        <img src="/uploads/{{magasin.photo}}" alt="{{magasin.description}}" class="single__image">
        <h2 class="title title--single">
            {{magasin.name}}
        </h2>
    </div>
    <div class="single__details inner">
        <img src="{{staticMap magasin.location.coordinates}}" alt="" class="single__map">
        <p class="single__location">
            {{magasin.description}}
        </p>
    </div>
</div>